{
  "name": "@squirrel/db",
  "version": "1.0.0",
  "description": "Drizzle database schema for the app",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "type": "module",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "tsc",
    "check-types": "tsc --noEmit",
    "db:generate": "drizzle-kit generate --config ./src/drizzle.config.ts",
    "db:migrate": "drizzle-kit migrate --config ./src/drizzle.config.ts",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "dotenv": "^16.4.7",
    "drizzle-orm": "^0.38.2",
    "nanoid": "^5.0.9",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "drizzle-kit": "^0.30.1",
    "tsx": "^4.19.2",
    "turbo": "^2.3.3",
    "typescript": "~5.7.2"
  }
}
